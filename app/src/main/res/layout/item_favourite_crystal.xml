<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/rounded_border"
    android:gravity="center_vertical">

    <!-- Crystal Image -->
    <ImageView
        android:id="@+id/crystalImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:contentDescription="Crystal image" />

    <!-- Name and Price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/crystalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amethyst"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/crystalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NZD 15"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Delete Button -->
    <ImageView
        android:id="@+id/wishlistIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/close_button"
        android:contentDescription="Delete from favourites" />

    <!-- Add to Cart Button -->
    <ImageView
        android:id="@+id/addToCart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@drawable/ic_cart"
        android:background="@drawable/rounded_border"
        android:contentDescription="Add to cart" />
</LinearLayout>
